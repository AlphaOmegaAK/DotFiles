set hlsearch
set sneak
set ignorecase
set smartcase

let mapleader = '<space>'

inoremap jk <Esc>

nnoremap ,c :action GotoClass<CR>

nnoremap L $
nnoremap H 0
vnoremap L $
vnoremap H 0

nnoremap ; :
nnoremap : ;

noremap <space>y "*y
noremap <space>Y "*Y
noremap <space>p "*p
noremap <space>P "*P

nnoremap / :action Find<cr>

nnoremap <cr> :nohlsearch<cr>

