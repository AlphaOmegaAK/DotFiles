; Available tags:
;   <label-muted> (default)
;   <ramp-volume>
;   <bar-volume>

;format-muted = <label-muted>

; Available tokens:
;   %percentage% (default)
;   %decibels%

;label-volume = %percentage%%

; Available tokens:
;   %percentage% (default)
;   %decibels%
