# #
# ~/.gitconfig
# #
[core]
	editor = nvim
	excludesfile = ~/.gitignore

[user]
	name = Prometheus
	email = arturxkaminski@gmail.com

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true

[color "status"]
  added = green
  changed = yellow
  untracked = magenta

[color "branch"]
  remote = cyan

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[color "diff"]
    ui = true
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse

[init]
	defaultBranch = master

[pull]
	rebase = false

[alias]
  ll = "log --format=\"%h%C(#69aadb)%d%C(reset) %s\""
  d = diff
  st = status
  hist = log --pretty=format:\"%Cgreen%h %Creset%cd %Cblue[%cn] %Creset%s%C(yellow)%d%C(reset)\" --graph --date=relative --decorate --all

;[pager]
  ;diff = delta
  ;log = delta
  ;reflog = delta
  ;show = delta
;[interactive]
  ;diffFilter = delta --color-only
;[delta]
  ;plus-style = "syntax #32361a"
  ;minus-style = "syntax #3c1f1e"
  ;features = side-by-side line-numbers decorations
  ;syntax-theme = Gruvbox Material Dark
  ;navigate = true
;[delta "decorations"]
  ;commit-decoration-style = bold yellow box ul
  ;file-style = bold ul
  ;file-decoration-style = none
  ;hunk-header-decoration-style = "#5a524c" box ul
;[delta "line-numbers"]
  ;line-numbers-plus-style = "#6c782e"
  ;line-numbers-minus-style = "#c14a4a"
  ;line-numbers-left-style = "#5a524c"
  ;line-numbers-right-style = "#5a524c"
  ;line-numbers-zero-style = "#5a524c"

; Delta git diff highlighters : https://github.com/dandavison/delta#installation
; Arch : pacman -S git-delta
; MacOS : brew install git-delta
